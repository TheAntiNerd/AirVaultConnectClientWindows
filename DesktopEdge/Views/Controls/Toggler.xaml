<UserControl x:Class="ZitiDesktopEdge.Toggler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZitiDesktopEdge"
             mc:Ignorable="d" 
             d:DesignHeight="24" 
             d:DesignWidth="40" 
             Width="40" 
             Height="24" 
             Padding="0,0,0,0" 
             Loaded="OnLoad">
    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
        <Canvas Name="LayoutRoot" Cursor="Hand" MouseUp="OnToggle">
            <Border Name="BackColor" Width="40" Height="24" CornerRadius="12" Background="#DFDFDF"></Border>
            <Border Name="OnColor" Width="40" Height="24" CornerRadius="12" Background="#36DB83" Opacity="0"></Border>
            <Border Name="ToggleTab" Width="20" Height="20" Canvas.Top="2" Canvas.Left="2" CornerRadius="12,12,12,12" Background="White">
                <Border.Effect>
                    <DropShadowEffect Direction="180" Opacity=".2"  />
                </Border.Effect>
            </Border>
        </Canvas>
    </StackPanel>
</UserControl>
